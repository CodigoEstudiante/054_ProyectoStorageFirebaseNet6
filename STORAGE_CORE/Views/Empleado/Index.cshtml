@model List<EmpleadoModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="card">
  <div class="card-header bg-dark text-white">
    Lista de empleados
  </div>
  <div class="card-body">
    <a asp-action="Crear" asp-controller="Empleado" class="btn btn-success">Crear Nuevo</a>
    <hr />
    <table class="table table-bordered">
        <thead class="table-dark text-white">
            <tr>
                <th>Nombre</th>
                <th>Telefono</th>
                <th>Foto</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                       <td>@item.Nombre</td>
                       <td>@item.Telefono</td>
                       <td>
                           <img src="@item.URLImagen" width="100" height="100">
                       </td>

                    </tr>


                }
        </tbody>
    </table>
  </div>
</div>